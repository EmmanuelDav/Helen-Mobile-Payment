<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/green_leaf_2">
    <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:maxLength="14"
            android:paddingRight="30dp"
            android:inputType="phone"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/edittext_bg_custom"
            android:ems="10"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/edittext_theme_enter_number"
            android:id="@+id/editText_phone_login"
            android:focusableInTouchMode="false" android:textIsSelectable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" android:layout_marginEnd="70dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/imageView_dollar"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:maxLength="6"
            android:paddingRight="40dp"
            android:inputType="numberPassword"
            android:gravity="center"
            android:textStyle="bold"
            android:ems="10"
            android:textColor="@android:color/white"
            android:background="@drawable/edittext_bg_custom"
            android:drawableLeft="@drawable/edittext_theme_enter_password"
            android:hint="enter pin"
            android:id="@+id/editText2_password"
            app:layout_constraintTop_toBottomOf="@+id/editText_phone_login"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button_login"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" android:layout_marginEnd="70dp"
            android:layout_marginTop="4dp"/>
    <Button
            android:text="Log In"
            android:layout_width="270dp"
            android:layout_height="36dp"
            android:id="@+id/button_login"
            android:fontFamily="monospace"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/button_bg_custom"
            app:layout_constraintTop_toBottomOf="@+id/editText2_password" android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/forgot_pin_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="75dp" android:layout_marginEnd="75dp" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Forgot Pin ?"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_pin_textview" android:textSize="16sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/button_login"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
    />
    <ImageView
            android:layout_width="116dp"
            android:layout_height="100dp" app:srcCompat="@drawable/coin"
            android:id="@+id/imageView_dollar"
            android:layout_marginTop="126dp"
            android:layout_marginBottom="46dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editText_phone_login" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.511"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_login"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/forgot_pin_textview" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>