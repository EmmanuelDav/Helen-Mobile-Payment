<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity"
        android:background="@drawable/green_leaf_2">

    <ImageView
            android:layout_width="116dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/coin"
            android:id="@+id/imageView_dollar"
            android:layout_marginTop="126dp"
            android:layout_marginBottom="46dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editText_phone_register"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
            android:text="+234"
            android:layout_width="266dp"
            android:layout_height="40dp"
            android:maxLength="14"
            android:paddingRight="40dp"
            android:inputType="phone"
            android:background="@drawable/edittext_bg_custom"
            android:gravity="center"
            android:textStyle="bold"
            android:ems="10"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/edittext_theme_enter_number"
            android:id="@+id/editText_phone_register"
            app:layout_constraintTop_toBottomOf="@+id/imageView_dollar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_sendcode"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    <Button
            android:text="Send Code"
            android:layout_width="270dp"
            android:layout_height="36dp"
            android:id="@+id/button_sendcode"
            android:fontFamily="monospace"
            android:background="@drawable/button_bg_custom"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/editText_phone_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/alreadyRegisterd_textView"
            android:textStyle="bold" />

    <TextView
            android:text="Enter your phone number to login"
            android:layout_width="309dp"
            android:layout_height="46dp"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:id="@+id/alreadyRegisterd_textView"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/button_sendcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>