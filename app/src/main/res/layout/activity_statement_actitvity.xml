<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_leaf_2"
        tools:context=".SendMoneyActivity">


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="355dp"
            android:layout_height="541dp"
            android:id="@+id/recyclerView_statements"
            app:layout_constraintTop_toBottomOf="@+id/textView_statements_balance"
            android:layout_marginBottom="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Balance"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/phone_number_textview"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="22sp"
            android:fontFamily="serif-monospace"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/textView_statements_balance" android:layout_marginTop="80dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/recyclerView_statements"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
</androidx.constraintlayout.widget.ConstraintLayout>