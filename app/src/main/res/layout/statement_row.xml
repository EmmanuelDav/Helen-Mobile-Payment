<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="110dp"
                                                   android:background="@drawable/phone_number_textview">

    <TextView
            android:text="TextView"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:fontFamily="serif-monospace"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/textView_srow_amount"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="debit"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp"
            android:fontFamily="serif-monospace"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView_srow_type"
            app:layout_constraintStart_toEndOf="@+id/textView_srow_amount"
            android:layout_marginStart="140dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:fontFamily="serif-monospace"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:id="@+id/textView_srow_client"
            app:layout_constraintTop_toBottomOf="@+id/textView_srow_amount"
            app:layout_constraintStart_toStartOf="@+id/textView_srow_amount"/>
    <TextView
            android:text="TextView"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:fontFamily="serif-monospace"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:id="@+id/textView_srow_time"
            app:layout_constraintTop_toBottomOf="@+id/textView_srow_client"
            app:layout_constraintStart_toStartOf="@+id/textView_srow_client"/>
</androidx.constraintlayout.widget.ConstraintLayout>
